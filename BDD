CREATE DATABASE Bd_BioDog

USE Bd_Vendas 

CREATE TABLE Usuario 
(
  idUsuario INTEGER   NOT NULL ,
  Nome INTEGER    ,
  Senha VARCHAR(45)    ,
  tipo varchar(3) NOT NULL CHECK (tipo IN('ADM', 'DONO')),
  PRIMARY KEY(idUsuario)
)
	INSERT INTO Usuario(IdUsuario) values (2578)
